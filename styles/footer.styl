html, body
  height 100%

.full-container
  display table
  height 100%
  width 100%

.non-footer
  display table-row
  height auto

footer
  display table-row
  height 1px
  background-color #09AD8C
  .container
    padding 30px 0
  p:last-child
    margin-bottom 0
  p
    text-align center
  p, a
    color #fff
