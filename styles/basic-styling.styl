body
  font-family 'Open Sans', sans-serif

strong
  font-weight bold

em
  font-style italic

h1
  font-size 36px
  text-transform uppercase
  text-align center
  font-weight 700
  padding 40px 0 20px 0
  letter-spacing 1px
  word-spacing 10px

p, li, pre
  font-size 18px
  color #111
  margin-bottom 1em
  line-height 1.8
  small
    font-size 15px

p, li, h1, h2, h3, pre
  max-width normalMaxWidth
  margin-left auto
  margin-right auto

a
  color activeColor
  font-weight bold
  &:hover
    color selectedActiveColor

code
  font-family monospace

pre
  max-width normalMaxWidth - 2 * 10px
  padding 10px
  background #eee
  overflow auto

p code
  background #eee
  padding 3px 3px
  margin -1px -1px

.star-separator
  content "***"
